<Window x:Class="TeleprompterApp.FullscreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeleprompterApp"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="Teleprompter" Height="450" Width="800">
    <Grid Margin="5">
        <Rectangle Grid.Column="1" Margin="0,0,0,0" Name="LineHighLight" Fill="#7FFF0000" Height="24" VerticalAlignment="Top"/>
        <ScrollViewer Grid.Column="1" Name="Scroll">
            <TextBlock TextWrapping="NoWrap" Name="TeleText" Text="{Binding MainText}" FontSize="18" FontFamily="Segoe UI Semibold" Margin="0,0,0,5000"/>
        </ScrollViewer>
    </Grid>
</Window>
